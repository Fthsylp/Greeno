@model List<Greeno.Models.Domain.PlantContainer>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show Plants - Admin Functionality</h1>
    </div>
</div>

<div class="container mt-2">
    <a class="btn btn-dark" asp-area="" asp-controller="Plant" asp-action="Add">New Plant</a>
</div>

<div class="container py-5">
    @if (Model.Count != 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.Image</td>
                        <td>
                            <a class="btn btn-dark" asp-area="" asp-controller="Plant" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        </td>
                        <td>
                            <form asp-area="" asp-controller="Plant" asp-action="Delete" method="post" style="display:inline;">
                                <input type="hidden" name="Id" value="@item.Id" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Plant Found!</p>

    }
</div>